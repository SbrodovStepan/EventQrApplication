<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://hallListView.title"
      focusComponent="hallsDataGrid">
    <data>
        <collection id="hallsDc"
                    class="com.company.eventqrapplication.entity.Hall">
            <fetchPlan extends="_base"/>
            <loader id="hallsDl" readOnly="true">
                <query>
                    <![CDATA[select e from eqa_Hall e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="hallsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="hallsDataGrid.createAction"/>
            <button id="editButton" action="hallsDataGrid.editAction"/>
            <button id="removeButton" action="hallsDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="hallsDl"/>
        </hbox>
        <dataGrid id="hallsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="hallsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="name"/>
                <column property="capacity"/>
                <column property="description"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
